@{
    ViewBag.Title = "Corporation Creation";
}
<head>
    <link href="~/lib/font-awesome/v4.4.0/css/font-awesome.css" rel="stylesheet" />
</head>
<body class="gray-bg">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">

            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>新增公司</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <form class="form-horizontal m-t" id="CreationForm">
                            <div class="form-group col-sm-6">
                                <label class="col-sm-3 control-label">姓氏：</label>
                                <div class="col-sm-9">
                                    <input id="firstname" name="firstname" class="form-control" type="text" placeholder="这里写点提示的内容">
                                </div>
                            </div>
                            <div class="form-group col-sm-6">
                                <label class="col-sm-3 control-label">名字：</label>
                                <div class="col-sm-9">
                                    <input id="lastname" name="lastname" class="form-control" type="text" aria-required="true" aria-invalid="false" class="valid">
                                </div>
                            </div>
                            <div class="form-group col-sm-6">
                                <label class="col-sm-3 control-label">用户名：</label>
                                <div class="col-sm-9">
                                    <input id="username" name="username" class="form-control" type="text" aria-required="true" aria-invalid="true" class="error">
                                </div>
                            </div>
                            <div class="form-group col-sm-6">
                                <label class="col-sm-3 control-label">密码：</label>
                                <div class="col-sm-9">
                                    <input id="password" name="password" class="form-control" type="password" placeholder="请输入您的密码">
                                </div>
                            </div>
                            <div class="form-group col-sm-6">
                                <label class="col-sm-3 control-label">确认密码：</label>
                                <div class="col-sm-9">
                                    <input id="confirm_password" name="confirm_password" class="form-control" type="password" placeholder="请再次输入您的密码">
                                </div>
                            </div>
                            <div class="form-group col-sm-6">
                                <label class="col-sm-3 control-label">E-mail：</label>
                                <div class="col-sm-9">
                                    <input id="email" name="email" class="form-control" type="email">
                                </div>
                            </div>
                            <div class="form-group  col-sm-6">
                                <div class="col-sm-9 col-sm-offset-3">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" class="checkbox" id="agree" name="agree"> 我已经认真阅读并同意《使用协议》
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-9 col-sm-offset-3">
                                    <button class="btn btn-primary" type="submit">提交</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

    @section Scripts {
        <!-- 自定义js -->
        <script src="~/js/content.js?v=1.0"></script>
        <!-- jQuery Validation plugin javascript-->
        <script src="~/lib/jquery-validate/v1.13.1/jquery.validate.js"></script>
        <script src="~/lib/jquery-validate/v1.13.1/localization/messages_zh.js"></script>
        <script src="~/js/Corporation/Creation.js"></script>
    }
</body>

